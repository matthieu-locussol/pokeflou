  guesses_gen2_2 Int @default(0)
  guesses_gen2_3 Int @default(0)
  guesses_gen2_4 Int @default(0)
  guesses_gen2_5 Int @default(0)
  guesses_gen3_1 Int @default(0)
  guesses_gen3_2 Int @default(0)
  guesses_gen3_3 Int @default(0)
  guesses_gen3_4 Int @default(0)
  guesses_gen3_5 Int @default(0)
  guesses_gen4_1 Int @default(0)
  guesses_gen4_2 Int @default(0)
  guesses_gen4_3 Int @default(0)
  guesses_gen4_4 Int @default(0)
  guesses_gen4_5 Int @default(0)
