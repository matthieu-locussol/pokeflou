generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Pokemon {
  id String @id @default(cuid())

  pokemonId Int

  name_ja String
  name_ko String
  name_zh String
  name_fr String
  name_de String
  name_it String
  name_en String
  name_es String

  blurred_1 String
  blurred_2 String
  blurred_3 String
  blurred_4 String
  blurred_5 String

  generation Int

  @@unique([pokemonId])
}

model User {
  id String @id @default(cuid())

  kindeId String

  guesses_gen1_1 Int @default(0)
  guesses_gen1_2 Int @default(0)
  guesses_gen1_3 Int @default(0)
  guesses_gen1_4 Int @default(0)
  guesses_gen1_5 Int @default(0)
